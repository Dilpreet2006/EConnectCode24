
@{
    ViewBag.Title = "CSP Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="section">

    <div class="card mb-3">
        <div class="card-header">
            <h4><span class="toggle-collapse" data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="filter"></span> Filter</h4>
        </div>
        <div class="card-body collapse" id="filter">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>From Date</label>
                        <div class="input-group datepicker">
                            <input type="text" class="form-control" value="10/24/1984" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="mdi mdi-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>To Date</label>
                        <div class="input-group datepicker">
                            <input type="text" class="form-control" value="10/24/1984" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="mdi mdi-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label>State</label>
                        <select class="form-control">
                            <option>Select</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>District</label>
                        <select class="form-control">
                            <option>Select</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label>CSP Code</label>
                        <select class="form-control">
                            <option>Select</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 mt-md-4 pt-1">
                    <button class="btn btn-dark px-4 mr-2">Cancel</button>
                    <button class="btn btn-primary px-4">Search</button>
                </div>

            </div>
        </div>
    </div>




    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="card card-statistic-2 mb-3">
                <div class="card-icon bg-light-primary text-primary">
                    <i class="mdi mdi-cash-refund"></i>
                </div>
                <div class="card-wrap">
                    <div class="card-header">
                        <h4>Withdrawal Request</h4>
                    </div>
                    <div class="card-body">
                        <div class=" mt-3">
                            <h6 class="mr-2">Open - <span>34848</span> </h6>
                            <h6> Closed - <span>38838</span></h6>
                        </div>
                        <p><a href="#" class="small">Download Detailed Statement</a></p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="card card-statistic-2 mb-3">
                <div class="card-icon bg-light-danger text-danger">
                    <i class="mdi mdi-cash-multiple"></i>
                </div>
                <div class="card-wrap">
                    <div class="card-header">
                        <h4>Deposit Request</h4>
                    </div>
                    <div class="card-body">
                        <div class=" mt-3">
                            <h6 class="mr-2">Open - <span>34848</span> </h6>
                            <h6> Closed - <span>38838</span></h6>
                        </div>
                        <p><a href="#" class="small">Download Detailed Statement</a></p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="card card-statistic-2 mb-3">
                <div class="card-icon bg-light-warning text-warning">
                    <i class="mdi mdi-headset"></i>
                </div>
                <div class="card-wrap">
                    <div class="card-header">
                        <h4>Support Request</h4>
                    </div>
                    <div class="card-body">
                        <div class=" mt-3">
                            <h6 class="mr-2">Open - <span>34848</span> </h6>
                            <h6> Closed - <span>38838</span></h6>
                        </div>
                        <p><a href="#" class="small">Download Detailed Statement</a></p>
                    </div>
                </div>

            </div>
        </div>



    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4>
                        CSP Count
                    </h4>
                    @*<div class="btn-group btn-group-toggle ml-auto" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                            <input type="radio" name="options" id="option1" autocomplete="off" checked> Day
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option2" autocomplete="off"> Week
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option3" autocomplete="off"> Month
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option3" autocomplete="off"> Year
                        </label>
                    </div>*@
                </div>
                <div class="card-body">
                    <div class="chart">
                        <canvas id="myChart" width="400" height="185"></canvas>

                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-4 revenue-stats border-0 ">
            <div class="card">
                <div class="card-header">
                    <h4>
                        User Count
                    </h4>
                </div>
                <ul class="list-unstyled">
                    <li class="d-flex">
                        <div class="bullet-icon"><i class="mdi mdi-circle text-info"></i></div>
                        <div class="des">
                            <h4>Total Active User</h4>
                            <p><sup><i class="mdi mdi-currency-inr"></i></sup> 842,12.00</p>
                        </div>

                    </li>
                    <li class="d-flex">
                        <div class="bullet-icon"><i class="mdi mdi-circle text-primary"></i></div>
                        <div class="des">
                            <h4>Total Inactive User</h4>
                            <p><sup><i class="mdi mdi-currency-inr"></i></sup> 502,17.00</p>
                        </div>

                    </li>
                    <li class="d-flex">
                        <div class="bullet-icon"><i class="mdi mdi-circle text-warning"></i></div>
                        <div class="des">
                            <h4>Total Blocked User</h4>
                            <p><sup><i class="mdi mdi-currency-inr"></i></sup> 321,00.00</p>
                        </div>

                    </li>
                </ul>
            </div>

        </div>
    </div>




</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.3.2/chart.min.js"></script>
