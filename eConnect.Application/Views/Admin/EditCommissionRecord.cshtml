                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NoOfTransactions, htmlAttributes: new { @class = "required-field" })
                            @Html.EditorFor(model => model.NoOfTransactions, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NoOfTransactions, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Commission, htmlAttributes: new { @class = "required-field" })
                            @Html.EditorFor(model => model.Commission, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Commission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="my-4 text-right">
                    <button class="btn btn-primary px-4" type="submit">Update</button>
                    @Html.HiddenFor(model => model.TransactionCommissionId)
                    @Html.HiddenFor(model => model.UploaderId)
                </div>
                <div class="text-left">
                    @Html.ActionLink("Cancel", "ViewUnPublishedRecords", new {id=Model.UploaderId })
                </div>
            </div>

        </div>
    </section>
